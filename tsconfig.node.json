/*
 * Node.js 환경에서 실행되는 설정 파일(vite.config.ts 등)을 위한 TypeScript 설정 파일입니다.
 * tsconfig.app.json는 브라우저용 코드(src/)를 검사하며,
 * tsconfig.node.json은 프로젝트 루트의 빌드/설정 파일들을 검사합니다.
 */

{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "target": "ES2023",
        "lib": ["ES2023"],
        "module": "ESNext",
        "types": ["node"], // Node.js 환경의 타입(path, __dirname 등)을 인식하게 함
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,

        /* Linting */
        "strict": true,
        // tsconfig.app.json과 일관성을 맞추기 위해, 주석처리함.
        // 안 쓰는 변수 검사는 ESLint에게 맡김
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["vite.config.ts"]
}
